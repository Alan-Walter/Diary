<?xml version="1.0" encoding="utf-8" ?>
<Shell  xmlns="http://xamarin.com/schemas/2014/forms"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:local="clr-namespace:Diary.Views"
        x:Class="Diary.Views.MainPage"
        FlyoutBehavior="Disabled"
        Visual="Material">

    <TabBar>
        
        <Tab Title="To Do List" 
             Route="todo"
             Icon="baseline_assignment_black_24">
            <ShellContent ContentTemplate ="{DataTemplate local:TodosPage}"/>
        </Tab>
        
        <Tab Title="Money" 
             Route="money"
             Icon="baseline_attach_money_black_24">
            <ShellContent ContentTemplate ="{DataTemplate local:MoneyPage}" Title="Money"/>
        </Tab>
        <Tab Title="Settings" 
             Route="settings"
             Icon="baseline_settings_black_24">
            <ShellContent ContentTemplate ="{DataTemplate local:SettingsPage}" Title="Settings"/>
        </Tab>
        
    </TabBar>
</Shell>
