<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diary.Views.DetailsTodoPage"
             Title="Todo"
             xmlns:cvt="clr-namespace:Diary.Converters">
    <ContentPage.Content>
        
        <StackLayout Margin="20">
            <StackLayout VerticalOptions="CenterAndExpand" Spacing="20">
                <Entry Text="{Binding Title}" Placeholder="Title" />
                <Entry Text="{Binding Notes}" Placeholder="Notes" />
                <!--<StackLayout Orientation="Horizontal">
                    <Label Text="Completed"/>
                    <Switch IsToggled="{Binding Completed}" />
                </StackLayout>-->
            </StackLayout>

            <StackLayout VerticalOptions="EndAndExpand" Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="Cancel" Clicked="CancelButton_Clicked" />
                <Button Text="Save" Command="{Binding SaveCommand}"/>
            </StackLayout>

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>